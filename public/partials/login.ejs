<div class="container" style="min-height:80%;">
	<div class="row" >
		<div class="col-sm-4 col-sm-offset-4">
		<form class="form loginForm" role="form" set-login-height>
			<div class="form-group ">
				<label for="username" class="white">Username</label>
				<input type="text" class="form-control" ng-model="username" id="username" placeholder="Enter username">
			</div>
			<div class="form-group ">
				<label for="password" class="white">Password</label>
				<input type="password" class="form-control" ng-model="password" id="password" placeholder="Enter password">
			</div>
			<button type="submit" class="btn btn-default btn-primary btn-block" id="signin-button" ng-click="login(username, password)"><i class="fa fa-lock"></i> Sign in</button>
		</form>
		</div>
	</div>
</div>
<div ng-include src="'/public/partials/footer.ejs'"></div>