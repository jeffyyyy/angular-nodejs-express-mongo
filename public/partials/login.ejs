<div class="container" style="min-height:80%;">
	<div class="row" >
		<div class="col-sm-4 col-sm-offset-4">
		<form class="form loginForm" ng-submit="submit();">
			<div class="form-group ">
				<label for="username" class="white">Username</label>
				<input type="text" class="form-control" ng-model="username" id="username" placeholder="Enter username" ng-model="form.username">
			</div>
			<div class="form-group ">
				<label for="password" class="white">Password</label>
				<input type="password" class="form-control" ng-model="password" id="password" placeholder="Enter password" ng-model="form.password">
			</div>
			<button type="submit" class="btn btn-default btn-primary btn-block" id="signin-button" ><i class="fa fa-lock"></i> Sign in</button>
		</form>
		</div>
	</div>
</div>

<script type="text/javascript">
$(function() {
	var resizeTimer;

	function setLoginHeight() {
		var midHeight = ($(window).height() - $('.loginForm').height() - $('.header').height() - $('.footer').height()) / 2;
		$('.loginForm').css('margin-top', midHeight);
	}

	$(window).resize(function() {
		clearTimeout(resizeTimer);
		resizeTimer = setTimeout(setLoginHeight, 100);
	});

	setLoginHeight();
});
</script>