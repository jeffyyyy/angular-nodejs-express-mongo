<div ng-include src="'/public/partials/header.ejs'"></div>

<div class="container">
	<div class="well">
		<form novalidate class="form" name="edit_form">
			<div class=" row">
				<div class="col-sm-6">
					<div class="form-group">
						<label for="username">Username*</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input type="text" class="form-control" name="username" ng-minlength=3 ng-check-exist="username" placeholder="" value="" id="username" ng-model="form.username" required ng-disabled="{{userId!='new'}}">
							<input type="hidden" name="userId" value="" ng-model="form._id" />
						</div>
					</div>
					
					<div class="form-group row">
						<div class="col-sm-12 error-container" ng-show="edit_form.username.$invalid && edit_form.username.$dirty && edit_form.username.$error.userExist || edit_form.submitted">
							<small class="error" ng-show="edit_form.username.$error.required">
								Your username is required.
							</small>
							<small class="error" ng-show="edit_form.username.$error.minlength">
								Your username is required to be at least 3 characters
							</small>
							<small class="error" ng-show="edit_form.username.$error.maxlength">
								Your username cannot be longer than 20 characters
							</small>
							<small class="error" ng-show="edit_form.username.$error.userExist">
								Your username already exist, please choose another username
							</small>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label for="password">Password*</label>
						<input type="password" class="form-control" name="password" id="password" ng-minlength=3 placeholder="Enter password" ng-model="form.password" required="required">
					</div>
					<div class="form-group row ">
						<div class="col-sm-12 error-container" ng-show="edit_form.password.$invalid && edit_form.password.$dirty || edit_form.submitted">
							<small class="error" ng-show="edit_form.password.$error.required">
								Your password is required.
							</small>
							<small class="error" ng-show="edit_form.password.$error.minlength">
								Your password is required to be at least 3 characters
							</small>
						</div>
					</div>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-6">
					<label for="email">Email*</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
						<input type="text" class="form-control" placeholder="email@example.com" name="email" id="email" ng-model="form.email" required ng-validate-email>
					</div>
				</div>
				<div class="col-sm-6">
					<label for="phone">Phone (optional)</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-mobile"></i></span>
						<input type="text" class="form-control" placeholder="Enter phone number" id="phone" ng-model="form.phone">
					</div>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-12 error-container " ng-show="edit_form.email.$dirty && edit_form.email.$error.invalidEmail || edit_form.submitted">
					<small class="error" ng-show="edit_form.email.$error.required">
						Your email is required.
					</small>
					<small class="error" ng-show="edit_form.email.$error.invalidEmail">
						 That is not a valid email.
					</small>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label for="firstName">First Name*</label>
						<input type="text" class="form-control" id="firstName" name="firstname" ng-maxlength=20 placeholder="Enter first name" ng-model="form.name.first" required>
					</div>
					<div class="form-group row">
						<div class="col-sm-12 error-container" ng-show="edit_form.firstname.$invalid && edit_form.firstname.$dirty || edit_form.submitted">
							<small class="error" ng-show="edit_form.firstname.$error.required">
								Your firstname is required.
							</small>
							<small class="error" ng-show="edit_form.firstname.$error.maxlength">
								Your firstname cannot be longer than 20 characters
							</small>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label for="lastName">Last Name*</label>
						<input type="text" class="form-control" id="lastName" name="lastname" ng-maxlength=20 placeholder="Enter last name" ng-model="form.name.last" required>
					</div>
					<div class="form-group row">
						<div class="col-sm-12 error-container" ng-show="edit_form.lastname.$invalid && edit_form.lastname.$dirty || edit_form.submitted">
							<small class="error" ng-show="edit_form.lastname.$error.required">
								Your lastname is required.
							</small>
							<small class="error" ng-show="edit_form.lastname.$error.maxlength">
								Your lastname cannot be longer than 20 characters
							</small>
						</div>
					</div>
				</div>
			</div>
			<button class="btn btn-default" ng-click="update(form, $event)">{{userAction}}</button>
			<button class="btn btn-default" ng-click="reset(form)" >Reset</button>
			
		</form>
	</div>
</div>

<div ng-include src="'/public/partials/footer.ejs'"></div>