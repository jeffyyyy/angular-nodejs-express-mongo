<div ng-include src="'/public/partials/header.ejs'"></div>

<div class="container">
	<div class="well">
		<h2>Welcome to Jeff's Chatroom</h2>
		<div class="row">
		<div class="col-sm-10">
		<div class="well well-sm" style="background:#333;color:white;min-height:200px;max-height:400px;overflow-y:auto">
			<slash ng-show="showDash">|</slash>
			<p class="{{msg.class}}" ng-repeat="msg in messages track by $index">{{msg.user+ ': ' +msg.text}}</p>
			<a id="bottom"></a>
		</div>
		<form class="form chat" ng-submit="sendMessage();">
			<div class="form-group ">
				<input id="message" class="form-control" ng-model="message" autocomplete="off" placeholder="Enter text here"/>
			</div>
			<button class="btn btn-default" >Send</button>
		</form>
		</div>
		<div class="col-sm-2">
		Current online users
		</div>
		</div>
	</div>
</div>

<div ng-include src="'/public/partials/footer.ejs'"></div>
