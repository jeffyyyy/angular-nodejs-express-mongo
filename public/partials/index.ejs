<div ng-include src="'/public/partials/header.ejs'"></div>

<div class="container">
	<div class="well">
		<h2>Welcome to Jeff's Chatroom</h2>
		<div class="row">
			<div class="col-sm-8">
				<div class="well well-sm" style="background:#333;color:white;height:400px;overflow-y:auto">
					<slash ng-show="showDash">|</slash>
					<p class="{{msg.class}}" ng-repeat="msg in messages track by $index">{{msg.user+ ': ' +msg.text}}</p>
					<a id="bottom"></a>
				</div>
				<form class="form chat" ng-submit="sendMessage();">
					<div class="form-group ">
						<input id="message" class="form-control" ng-model="message" autocomplete="off" placeholder="Enter message here"/>
					</div>
					<button class="btn btn-default" >Send</button>
				</form>
			</div>
			<div class="col-sm-4">
				<div class="panel panel-default">
					<div class="panel-heading"><i class="fa fa-user"></i>Current Online Users</div>
					<table class="table table-hover table-striped">
						<tbody>
							<tr ng-repeat="user in users track by $index">
								<td><a href="/user/{{user._id}}">{{user.username}}</a></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

<div ng-include src="'/public/partials/footer.ejs'"></div>
